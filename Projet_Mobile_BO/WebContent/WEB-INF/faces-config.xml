<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
    version="2.1">
    
    <managed-bean>
    	<description>Bean de management des utilisateurs</description>
    	<managed-bean-name>userBean</managed-bean-name>
    	<managed-bean-class>com.natek.controller.UserBean</managed-bean-class>
    	<managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
    <managed-bean>
    	<description>Bean de management principal</description>
    	<managed-bean-name>homeBean</managed-bean-name>
    	<managed-bean-class>com.natek.controller.HomeBean</managed-bean-class>
    	<managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    
    <navigation-rule>
    	<from-view-id>/pages/index.xhtml</from-view-id>
    	<navigation-case>
    		<from-outcome>login</from-outcome>
    		<to-view-id>/pages/home.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<from-view-id>/pages/home.xhtml</from-view-id>
    	<navigation-case>
    		<from-outcome>home</from-outcome>
    		<to-view-id>/pages/home.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>newCategory</from-outcome>
    		<to-view-id>/pages/categories/NewCategory.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>setCategory</from-outcome>
    		<to-view-id>/pages/categories/ModifyCategory.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>erreur</from-outcome>
    		<to-view-id>/pages/erreur.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<from-view-id>/pages/categories/NewCategory.xhtml</from-view-id>
    	<navigation-case>
    		<from-outcome>true</from-outcome>
    		<to-view-id>/pages/home.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>false</from-outcome>
    		<to-view-id>/pages/categories/NewCategory.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>backToHome</from-outcome>
    		<to-view-id>/pages/home.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
    <navigation-rule>
    	<from-view-id>/pages/categories/ModifyCategory.xhtml</from-view-id>
    	<navigation-case>
    		<from-outcome>true</from-outcome>
    		<to-view-id>/pages/home.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>false</from-outcome>
    		<to-view-id>/pages/categories/ModifyCategory.xhtml</to-view-id>
    	</navigation-case>
    	<navigation-case>
    		<from-outcome>backToHome</from-outcome>
    		<to-view-id>/pages/home.xhtml</to-view-id>
    	</navigation-case>
    </navigation-rule>
    
</faces-config>
